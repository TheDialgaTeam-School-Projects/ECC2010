<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mdad.restaurant.MenuSelectionActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvMenuSelectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Unknown Menu"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivMenuSelectionImage"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/unknown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvMenuSelectionPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMenuSelectionPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="$0.00"
                android:textColor="#FF0000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvMenuSelectionQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spMenuSelectionQuantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvMenuSelectionTotalPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMenuSelectionTotalPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="$0.00"
                android:textColor="#FF0000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMenuSelectionRequestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Request:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMenuSelectionRequest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnMenuSelectionAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add/Update to Order" />

            <Button
                android:id="@+id/btnMenuSelectionClear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Clear" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
